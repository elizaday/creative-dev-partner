{
  "framework": null,
  "buildCommand": "cd frontend && npm install && npm run build && cp -r dist ../public",
  "outputDirectory": "public",
  "installCommand": "npm install",
  "functions": {
    "api/*.js": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
